(ns booketariand.core-test
  (:require [clojure.test :refer :all]
            [clojure.java.shell :only [:sh]]
            [booketariand.core :refer :all :as core]))

(deftest extract_all-test
  (testing "booketariand.core/extract_all"
    (let [results (core/extract_all ["./test/booketariand/artifacts/NativePDF.pdf"]  nil)]
      (println results)
      (is (= (count results) 8))
      )))

(deftest extract-test
  (testing "booketariand.core/extract_all"
    (let [results (core/extract :author ["./test/booketariand/artifacts/NativePDF.pdf"]  nil)]
      (println results)
      (is (= results "Ernie de Feria"))
      )))
