class SiteDocumentsController < AlexandriaCloudController
 #if we decide to make this an unprotected asset, then uncomment the following line
 #skip_authentication_filters

 respond_to  :html

 def create
   remove_matching(params)
   create!(:notice => "Successfully added Site Document.") { site_documents_url }
 end


private
  def remove_matching( params )
    _p = params[:site_document][:purpose]
    _d = SiteDocument.find_by( purpose: _p )
    _d.delete() if !_d.nil?
  end

end
