class SubscriptionNotificationMailer < ActionMailer::Base

  def notify(member_admin, expiration_date)
    @notification = {:member => member_admin, :expiration_date => expiration_date}
    mail(
      :to       => member_admin.email,
      :from     => Settings.mail_sender_address,
      :subject  => "Dokkumento Trial Period Expiration Notification")
  end

  def self.last_email
    ActionMailer::Base.deliveries.last
  end

end
