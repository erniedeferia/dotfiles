var http = require('http');

http.createServer( function(req, res) {

  var path = req.url.replace(/\/?(?:\?.*)?$/,'').toLowerCase();
  switch(path) {
    case '':
           res.writeHead(200, {'Content-Type': 'text/plain'});
           res.end('Home Page');
           break;
    case '/about':
           res.writeHead(200, {'Content-Type': 'text/plain'});
           res.end('About Page');
           break;
    default:
           res.writeHead(404, {'Content-Type': 'text/plain'});
           res.end('Page not found');
           break;

  }
}).listen(3001);
