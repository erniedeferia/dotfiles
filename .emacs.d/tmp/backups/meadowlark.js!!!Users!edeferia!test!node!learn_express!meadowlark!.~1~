var express = require('express');

var app = express();

app.set('port', process.env.PORT || 3000);


app.use(function(res, req) {
 res.type('text/plain');
 res.status(404);
 res.send('404 - Not Found');
});

app.use(function(err, res, req, next) {
 console.error(err.stack);
 res.type('text/plain');
 res.status(500);
 res.send('500 - Server Error');
});
